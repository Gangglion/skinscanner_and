<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="DefaultButtonStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/ic_background_radius_8</item>
        <item name="android:backgroundTint">@android:color/holo_blue_light</item>
        <item name="android:paddingVertical">@dimen/_16dp</item>
        <item name="android:paddingHorizontal">@dimen/_8dp</item>
        <item name="android:textSize">@dimen/_16dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="ExtraLargeText">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_24sp</item>
    </style>

    <style name="LargeText">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_20sp</item>
    </style>

    <style name="MediumText">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/_18sp</item>
    </style>

    <style name="DefaultText">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/_16sp</item>
    </style>
</resources>